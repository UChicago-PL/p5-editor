{
	"extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
	"parser": "@typescript-eslint/parser",
	"env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "linebreak-style": 0,
    "react/no-multi-comp": 0,
    "import/default": 0,
    "import/no-duplicates": 0,
    "import/named": 0,
    "import/namespace": 0,
    "import/no-unresolved": 0,
    "import/no-named-as-default": 2,
    "comma-dangle": 0,  // not sure why airbnb turned this on. gross!
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-console": 0,
    "no-confusing-arrow": "off",
    "no-alert": 0,
    "no-underscore-dangle": 0,
    "max-len": [1, 120, 2, {"ignoreComments": true, "ignoreTemplateLiterals": true, "ignoreStrings": true}],
    "quote-props":"off",
    "no-unused-vars": [1, {"vars": "local", "args": "none"}],
    "consistent-return":"off",
    "no-param-reassign": [2, { "props": false }],
    "react/self-closing-comp": ["error", {
      "component": true,
      "html": false
    }],
    "arrow-body-style":"off",
    "arrow-parens": "off",
    "object-curly-newline": 0,
    "newline-per-chained-call": 0,
    "react/prefer-stateless-function": [2,
      { "ignorePureComponents": true
    }],
    "class-methods-use-this": 0,
    "function-paren-newline": 0,
    // "react/jsx-no-bind": [2, {"allowBind": true, "allowArrowFunctions": true}],
    "no-return-assign": [2, "except-parens"],
    "jsx-a11y/anchor-is-valid": [
      "error",
      {"components": ["Link"], "specialLink": ["to"] }
    ],
    "jsx-a11y/label-has-for": [
      2,
      {
        "components": ["Label"],
        "required": {"every": ["id"]},
        "allowChildren": false
      }
    ],
    // new rules: undo all these later
    "max-classes-per-file": 0,
    "react/destructuring-assignment": 0,
    "react/button-has-type": 0,
    "no-useless-catch": 0,
    "implicit-arrow-linebreak": 0,
    "operator-linebreak": 0,
    "import/no-cycle": 0,
    "function-call-argument-newline": 0,
    "no-multiple-empty-lines": 0,
    "prefer-object-spread": 0,
    "no-else-return": 0,
    "default-param-last": 0,
    "prefer-template": 0,
    "func-names": 0,
    "react/jsx-props-no-spreading": 0,
    "react/jsx-filename-extension": 0,
    "react/function-component-definition": 0,
    "radix": 0,
    "react/sort-comp": 0,
    "react/no-unused-class-component-methods": 0,
    "react/jsx-no-bind": 0,
    "react/jsx-one-expression-per-line": 0,
    "keyword-spacing": 0,
    "jsx-a11y/control-has-associated-label": 0, // really re-enable these one
    "jsx-a11y/label-has-associated-control": 0,
    "no-restricted-syntax": 0,
    "no-loop-func": 0,
    "import/extensions": 0,
    "react/display-name": 0,
    "@typescript-eslint/no-var-requires": 0,
    "@typescript-eslint/no-this-alias": 0,
    "@typescript-eslint/no-empty-function": 0,
    "@typescript-eslint/no-explicit-any": 0,
    "@typescript-eslint/no-non-null-assertion": 0,
    "react/jsx-uses-react": 1
  },
  "settings": {
    "import/parser": "@babel/eslint-parser",
    "import/resolve": {
      "moduleDirectory": ["node_modules"]
    },
    "react": {
      "version": "detect"
    }
  },
  "globals": {
    "__DEVELOPMENT__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DISABLE_SSR__": true,
    "umami": true
  },
  "ignorePatterns": [
    "**/node_modules/**"
  ],
  "parserOptions": {
    "requireConfigFile": false,
    "ecmaVersion": 11
  }
}
